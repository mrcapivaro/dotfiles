## Options

mouse-hide-while-typing = true
clipboard-read          = "allow"
clipboard-write         = "allow"
confirm-close-surface   = false


## Appearance

title                  = "Ghostty"
theme                  = "GruvboxDark"
window-theme           = "dark"
window-padding-x       = 2
window-padding-y       = 1
font-family            = "JetBrainsMono Nerd Font"
font-size              = 12
font-style             = SemiBold
font-style-bold        = ExtraBold

# Disable font ligatures
font-feature       = -calt
font-feature       = -liga
font-feature       = -dlig

# Disable rounded corners and {title, tab}bars
window-decoration  = false
gtk-titlebar       = false
gtk-tabs-location  = bottom
gtk-adwaita = false


## Keybinds

keybind = ctrl+shift+t=toggle_window_decorations

# Reset all keybinds
keybind = clear

# Scroll
keybind = page_up=scroll_page_up
keybind = page_down=scroll_page_down

# Configuration and dotfiles
keybind = ctrl+shift+r=reload_config
keybind = ctrl+shift+comma=open_config
keybind = ctrl+shift+i=inspector:toggle

# Clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# Selection
keybind = ctrl+shift+a=select_all

# Fonts
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1
keybind = ctrl+shift+zero=reset_font_size
